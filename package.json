{
  "name": "portfolio",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "start": "turbo run start --parallel --concurrency=100%",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build:package": "node ./scripts/prebuild.js"
  },
  "dependencies": {
    "rimraf": "^5.0.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "^3.1.0",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "apps/*",
    "apps/APIs/*",
    "packages/*"
  ]
}
