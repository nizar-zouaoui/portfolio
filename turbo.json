{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NPM_TOKEN",
    "DATABASE_USER",
    "DATABASE_PASSWORD",
    "JWT_SECRET_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "start": {
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "env": [
        "NPM_TOKEN",
        "DATABASE_USER",
        "DATABASE_PASSWORD",
        "USER_EMAIL",
        "USER_PASSWORD",
        "USER_USERNAME",
        "JWT_SECRET_KEY"
      ],
      "cache": false,
      "persistent": true
    }
  }
}
